[Unit]
Description=LD48 Leaderboard Server

[Service]
ExecStart=/usr/local/bin/gunicorn --certfile=/etc/letsencrypt/live/slime.jschnei.com/server.crt --keyfile=/etc/letsencrypt/live/slime.jschnei.com/server.key --bind 0.0.0.0:443 app:app

WorkingDirectory=/srv/ld48/server

User=root
Group=root

Restart=always

[Install]
WantedBy=multi-user.target
